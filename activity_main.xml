<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:padding="16dp"

    tools:context=".MainActivity">


    <TextView
        android:id="@+id/headerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We stand with every woman, alwaysâœŠ"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#D81B60"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/numberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerText"
        android:layout_marginTop="12dp"
        android:hint="Enter a Number"
        android:inputType="phone"
        android:maxLength="10"
        android:minHeight="48dp"
        android:imeOptions="actionDone"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext_background"
        android:textColor="#000"
        android:textColorHint="#80000000"
        android:textSize="16sp"
        android:textCursorDrawable="@null" />

    <!-- SOS Button -->
    <Button
        android:id="@+id/sosButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Send SOS "
        android:textColor="#FFF"
        android:background="@drawable/button_sos_background"

        android:drawablePadding="8dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:gravity="center_vertical" />

    <!-- Camera Preview (1px) -->

    <!-- Period Tracker Button -->

    <!-- Bottom Buttons: Record, Call, Chat (with equal spacing) -->


    <SurfaceView
        android:id="@+id/cameraPreview"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_below="@id/sosButton"
        android:layout_marginTop="30dp"
        android:background="#000" />

    <Button
        android:id="@+id/periodTrackerButton"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_below="@id/sosButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corner_button"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="ðŸ“… Tracker"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />


    <LinearLayout
        android:id="@+id/bottomButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/startRecordingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¥ Record"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/button_blue_background"
            android:padding="12dp"
            android:elevation="4dp" />

        <!-- Flexible space -->
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/callButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ž Call"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/button_blue_background"
            android:padding="12dp"
            android:elevation="4dp" />
        <!-- Flexible space -->
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <Button
            android:id="@+id/chatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¤– Chat"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:background="@drawable/button_blue_background"
            android:padding="12dp"
            android:elevation="4dp" />
    </LinearLayout>
</RelativeLayout>